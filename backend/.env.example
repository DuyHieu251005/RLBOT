# ============================================
# RLBot RAG Backend Configuration
# Copy this file to .env and fill in your values
# ============================================

# Gemini API Key - Required (at least one AI key needed)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenRouter API Key - Optional (alternative AI provider)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Default AI Provider: "gemini" or "openrouter"
DEFAULT_AI_PROVIDER=gemini

# Database URL - Required
# Supabase PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
# Port 6543 = Transaction Pooler (recommended for API)
# Port 5432 = Direct connection (for migrations)
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres?sslmode=require&prepared_statement_cache_size=0

# Server Config - Optional
HOST=0.0.0.0
PORT=8000

# Debug Mode - Optional (set to true for development)
DEBUG=false

# Chunking Config - Optional (defaults shown)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Search Config - Optional
MAX_SEARCH_RESULTS=10
EMBEDDING_CACHE_SIZE=1000

# ============================================
# Supabase Authentication - Required
# Get from: https://supabase.com/dashboard → Project Settings → API
# ============================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================
# CORS Origins - Optional (comma-separated)
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com
